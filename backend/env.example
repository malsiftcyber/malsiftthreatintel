# Application Settings
APP_NAME=Cyber Threat Intelligence Platform
VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost/cyber_threat_intel

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Threat Intelligence Sources
# CISA
CISA_API_KEY=
CISA_BASE_URL=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json

# AlienVault OTX
OTX_API_KEY=your-otx-api-key
OTX_BASE_URL=https://otx.alienvault.com/api/v1

# VirusTotal
VIRUSTOTAL_API_KEY=your-virustotal-api-key
VIRUSTOTAL_BASE_URL=https://www.virustotal.com/vtapi/v2

# ThreatFox
THREATFOX_API_KEY=
THREATFOX_BASE_URL=https://threatfox-api.abuse.ch/api/v1

# MISP
MISP_API_KEY=your-misp-api-key
MISP_BASE_URL=https://your-misp-instance.com

# PhishTank
PHISHTANK_BASE_URL=http://data.phishtank.com/data

# URLhaus
URLHAUS_BASE_URL=https://urlhaus-api.abuse.ch/v1

# Dark Web Sources (Tor)
TOR_PROXY_URL=127.0.0.1
TOR_PROXY_PORT=9050

# Job Processing
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Data Retention
DATA_RETENTION_DAYS=90

# Deduplication
SIMILARITY_THRESHOLD=0.8

# Free Tier Limits
VIRUSTOTAL_FREE_LIMIT=4
OTX_FREE_LIMIT=10
THREATFOX_FREE_LIMIT=5
